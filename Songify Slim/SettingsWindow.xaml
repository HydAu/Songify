<controls:MetroWindow x:Class="Songify_Slim.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Settings" Height="310.884" Width="572" Loaded="SettingsWindow_Loaded" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TabControl Margin="10,10,10,21" TabStripPlacement="Left">
            <TabItem Header="System">
                <Grid>
                    <controls:ToggleSwitch x:Name="ChbxAutostart" Content="autostart with windows" HorizontalAlignment="Left" Header="Behavior"
                              Margin="10,10,0,0" VerticalAlignment="Top" Checked="ChbxAutostartChecked"
                              Unchecked="ChbxAutostartChecked" Focusable="False" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI Semibold" FontSize="12"
                                           controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0"
                                           controls:ControlsHelper.HeaderMargin="0" Width="366" />
                    <controls:ToggleSwitch x:Name="ChbxMinimizeSystray" Content="minimize to system tray"
                              HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,61,0,0"
                              Checked="ChbxMinimizeSystrayChecked" Unchecked="ChbxMinimizeSystrayChecked"
                              Focusable="False" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI" FontSize="12"
                                           controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0"
                                           controls:ControlsHelper.HeaderMargin="0" Width="366" />
                    <controls:ToggleSwitch x:Name="ChbxTelemetry" Content="send anonymous data" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,101,0,0" Header="Telemetry"
                                           Width="366" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI Semibold" FontSize="12"
                                           controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0"
                                           controls:ControlsHelper.HeaderMargin="0" Height="49" IsCheckedChanged="ChbxTelemetry_IsCheckedChanged"/>

                    <Button x:Name="BtnUpdates" Content="Check for Updates" Margin="10,186,0,0"
                            Click="BtnUpdatesClick" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="154" />
                    <Label Content="?" HorizontalAlignment="Left" Margin="56,96,0,0" VerticalAlignment="Top" Width="26" HorizontalContentAlignment="Center" ToolTip="{DynamicResource collectable_data}"/>
                    <Label Content="Chrome fetch rate (seconds)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,155,0,0" Padding="0,5,5,5"/>
                    <controls:NumericUpDown x:Name="NudChrome" Minimum="1" Maximum="10" Interval="1" NumericInputMode="Numbers" Margin="255,155,0,0" ValueChanged="NudChrome_ValueChanged" HasDecimals="False" Height="28" Padding="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="121" />


                </Grid>
            </TabItem>
            <TabItem Header="Output">
                <Grid>
                    <Label Content="Output Directory" HorizontalAlignment="Left" Margin="9,11,0,0"
                           VerticalAlignment="Top" />
                    <TextBox x:Name="TxtbxOutputdirectory" HorizontalAlignment="Left" Height="23" Margin="112,11,0,0"
                             TextWrapping="Wrap" VerticalAlignment="Top" Width="195" IsReadOnly="True" />
                    <Button x:Name="BtnOutputdirectory" Content="..." HorizontalAlignment="Left" Margin="312,10,0,0"
                            VerticalAlignment="Top" Width="27" Click="BtnOutputdirectoryClick"
                            RenderTransformOrigin="-1.138,0.407" />
                    <Button x:Name="BtnCopyToClip" HorizontalAlignment="Left" Margin="344,10,0,0"
                            VerticalAlignment="Top" Width="28" Click="BtnCopyToClipClick" Padding="5"
                            Focusable="False" ToolTip="Copy to Clipboard" Height="27">

                        <iconPacks:PackIconFontAwesome Width="15" Height="15" Kind="LinkSolid" />

                    </Button>
                    <Label Content="Output Format" HorizontalAlignment="Left" Margin="9,42,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TxtbxOutputformat" HorizontalAlignment="Left" Height="23" Margin="112,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" TextChanged="TxtbxOutputformat_TextChanged">
                        <TextBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="MenuBtnArtist" Header="Artist" Click="MenuBtnArtist_Click"/>
                                <MenuItem x:Name="MenuBtnTitle" Header="Title" Click="MenuBtnTitle_Click"/>
                                <MenuItem x:Name="MenuBtnExtra" Header="Extra" Click="MenuBtnExtra_Click"/>
                                <MenuItem x:Name="MenuBtnReq" Header="Requester" Click="MenuBtnReq_Click"/>
                            </ContextMenu>
                        </TextBox.ContextMenu>
                    </TextBox>

                    <CheckBox x:Name="ChbxCustomPause" Content="Pause Text" HorizontalAlignment="Left"
                              Margin="15,77,0,0" VerticalAlignment="Top" Checked="ChbxCustompauseChecked" Focusable="False" Unchecked="ChbxCustompauseChecked" />
                    <TextBox x:Name="TxtbxCustompausetext" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Margin="112,74,0,0" controls:TextBoxHelper.Watermark="Custom pause text (blank for empty text file)" TextChanged="TxtbxCustompausetext_TextChanged" IsEnabled="False" />
                    <controls:ToggleSwitch x:Name="ChbxUpload" Content="Upload song info" HorizontalAlignment="Left"
                              Margin="15,105,0,0" VerticalAlignment="Top" Checked="ChbxUpload_Checked" Unchecked="ChbxUpload_Checked"
                              Focusable="False" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI" FontSize="12"
                                           controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0"
                                           controls:ControlsHelper.HeaderMargin="0" Width="324" Height="36" />
                    <controls:ToggleSwitch x:Name="ChbxCover" Content="Download album cover (only works with API)" HorizontalAlignment="Left"
                                           Margin="15,146,0,0" VerticalAlignment="Top" 
                                           Focusable="False" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI" FontSize="12"
                                           controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0"
                                           controls:ControlsHelper.HeaderMargin="0" Width="324" Height="36" Checked="ChbxCover_Checked" Unchecked="ChbxCover_Checked" />
                    <Button x:Name="BtnCopyURL" HorizontalAlignment="Left" Margin="344,109,0,0" VerticalAlignment="Top" Width="28" Click="BtnCopyURL_Click">
                        <iconPacks:PackIconFontAwesome Width="15" Height="15" Kind="LinkSolid" />
                    </Button>
                    <controls:ToggleSwitch x:Name="ChbxSplit" Content="Split Artist and Title" HorizontalAlignment="Left"
                        Margin="15,187,0,-6" VerticalAlignment="Top" 
                        Focusable="False" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI" FontSize="12"
                        controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0"
                        controls:ControlsHelper.HeaderMargin="0" Width="324" Height="36" Checked="ChbxSplit_Checked" Unchecked="ChbxSplit_Checked" />
                </Grid>
            </TabItem>
            <TabItem Header="Appearance">
                <Grid>
                    <Label x:Name="LabelColor" Content="Color:" HorizontalAlignment="Left" Margin="11,13,0,0"
                           VerticalAlignment="Top" Width="71" Padding="5" />
                    <ComboBox x:Name="ComboBoxColor" Margin="114,13,0,0" Height="23" VerticalAlignment="Top"
                              SelectionChanged="ComboBoxColorSelectionChanged" HorizontalAlignment="Left" Width="238" />
                    <controls:ToggleSwitch x:Name="ThemeToggleSwitch" Margin="208,44,0,0" HorizontalAlignment="Left"
                                           Width="144" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI" FontSize="12"
                                           controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0"
                                           controls:ControlsHelper.HeaderMargin="0" Height="32" VerticalAlignment="Top"
                                           Padding="5,0,0,0" IsCheckedChanged="ThemeToggleSwitchIsCheckedChanged"
                                           OffLabel="Light Theme" OnLabel="Dark Theme" />
                </Grid>
            </TabItem>
            <TabItem Header="Integration">
                <ScrollViewer>
                    <StackPanel>
                        <!-- NIGHTBOT -->
                        <Label x:Name="lbl_nightbot" Content="Nightbot" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="0,0,5,5" />
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="txtbx_nbuser" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Margin="0,0,5,5" VerticalAlignment="Top" Width="286"  controls:TextBoxHelper.Watermark="NB Username (Twitch Username)" TextChanged="Txtbx_nbuser_TextChanged" />
                            <Button x:Name="btn_nblink" Content="LINK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,0,5,5" Click="Btn_nblink_Click" />
                        </StackPanel>

                        <!-- SPOTIFY -->
                        <Label x:Name="lbl_Spotify" Content="Spotify" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,5,5" />
                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="lbl_SpotifyAcc" Content="Linked account: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,5,5" Width="286" />
                            <Button x:Name="btn_spotifyLink" Content="LINK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,0,5,5" Click="btn_spotifyLink_Click" />
                        </StackPanel>

                        <!-- TWITCH -->
                        <Label Content="Twitch" HorizontalAlignment="Left" VerticalAlignment="Top"  Padding="0,5,5,5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="txtbx_twUser" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="96"  Margin="0,0,5,5" controls:TextBoxHelper.Watermark="Account" TextChanged="txtbx_twUser_TextChanged"/>
                            <PasswordBox x:Name="txtbx_twOAuth" HorizontalAlignment="Left" Height="23" controls:TextBoxHelper.Watermark="oAuth Token" VerticalAlignment="Top"  Margin="0,0,5,5" Width="242"  PasswordChanged="txtbx_twOAuth_PasswordChanged"/>
                            <Button Content="?" HorizontalAlignment="Left" VerticalAlignment="Top" Width="18"  Click="Button_Click" ToolTip="Click here to get the oAuth token."/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="txtbx_twChannel" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" controls:TextBoxHelper.Watermark="Channel to join"  Margin="0,0,5,5" VerticalAlignment="Top" Width="271"  TextChanged="txtbx_twChannel_TextChanged"/>
                            <CheckBox x:Name="Chbx_TwAutoconnect" Content="autoconnect" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="Chbx_TwAutoconnect_Checked" Unchecked="Chbx_TwAutoconnect_Checked"/>
                        </StackPanel>
                        
                        <!-- SUBSONIC -->
                        <Label x:Name="lbl_subsonic" Content="Subsonic" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,5,5,5"/>
                        <TextBox x:Name="txtbx_subsonicServerAddress" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="370"  Margin="0,0,5,5" controls:TextBoxHelper.Watermark="Server address (https://myserver.com)" TextChanged="txtbx_subsonicServerAddress_TextChanged"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="txtbx_subsonicUser" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"  Margin="0,0,5,5" controls:TextBoxHelper.Watermark="User" TextChanged="txtbx_subsonicUser_TextChanged"/>
                            <PasswordBox x:Name="txtbx_subsonicPassword" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120"  Margin="0,0,5,5" controls:TextBoxHelper.Watermark="Password" PasswordChanged="txtbx_subsonicPassword_PasswordChanged"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Spotify SR">
                <Grid>
                    <TextBox x:Name="txtbx_RewardID" HorizontalAlignment="Left" Height="23" Text="" VerticalAlignment="Top" Width="225" Margin="151,1,0,0" controls:TextBoxHelper.Watermark="Reward ID" TextChanged="txtbx_RewardID_TextChanged"/>
                    <Label Content="Channel Points Reward ID" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <CheckBox x:Name="Chbx_MessageLogging" Content="Enable Message Logging" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="151,32,0,0" Checked="Chbx_MessageLogging_Checked" Unchecked="Chbx_MessageLogging_Checked"/>
                    <controls:ToggleSwitch x:Name="Chbx_TwReward" Content="Enable SR (Channel Rewards)" HorizontalAlignment="Left"
                              Margin="5,60,0,0" VerticalAlignment="Top" Checked="Chbx_TwReward_Checked" Unchecked="Chbx_TwReward_Checked"
                              Focusable="False" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI" FontSize="12"
                                           controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0"
                                           controls:ControlsHelper.HeaderMargin="0" Width="376" Height="36" />
                    <controls:ToggleSwitch x:Name="Chbx_TwCommand" Content="Enable SR (Command (!ssr SpotifyURI))" HorizontalAlignment="Left"
                              Margin="5,96,0,0" VerticalAlignment="Top" Checked="Chbx_TwCommand_Checked" Unchecked="Chbx_TwCommand_Checked"
                              Focusable="False" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI" FontSize="12"
                                           controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0"
                                           controls:ControlsHelper.HeaderMargin="0" Width="376" Height="36" />
                    <controls:ToggleSwitch x:Name="Chbx_AutoClear" Content="Clear Queue on Startup" HorizontalAlignment="Left"
                              Margin="5,203,0,0" VerticalAlignment="Top" Checked="Chbx_AutoClear_Checked" Unchecked="Chbx_AutoClear_Checked"
                              Focusable="False" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI" FontSize="12"
                                           controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0"
                                           controls:ControlsHelper.HeaderMargin="0" Width="376" Height="36" />
                    <Label Content="Max Requests per User" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,139,0,0"/>
                    <Label Content="Command Cooldown (seconds)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,172,0,0"/>
                    <controls:NumericUpDown x:Name="NudMaxReq" Minimum="1" Maximum="100" Interval="1" NumericInputMode="Numbers" Margin="267,137,0,0" ValueChanged="NudMaxReq_ValueChanged" HasDecimals="False" Height="28" Padding="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" />

                    <controls:NumericUpDown x:Name="NudCooldown" Minimum="1" Maximum="100" Interval="1" NumericInputMode="Numbers" Margin="267,170,0,0" ValueChanged="NudCooldown_ValueChanged" HasDecimals="False" Height="28" Padding="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" />
                </Grid>
            </TabItem>
            <TabItem Header="Config">
                <Grid>
                    <Button x:Name="Btn_ExportConfig" Content="Export Config" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" Margin="10,42,0,0" Click="Btn_ExportConfig_Click"/>
                    <Button x:Name="Btn_ImportConfig" Content="Import Config" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" Margin="10,10,0,0" Click="Btn_ImportConfig_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
        <StatusBar Height="14" VerticalAlignment="Bottom" Padding="0" ScrollViewer.CanContentScroll="True" Margin="0" UseLayoutRounding="False">
            <Label x:Name="Lbl_Status" FontSize="10" Padding="0" VerticalContentAlignment="Bottom"
                   HorizontalContentAlignment="Stretch" Width="340" HorizontalAlignment="Left" Margin="0,-4" VerticalAlignment="Top" />
        </StatusBar>
    </Grid>
</controls:MetroWindow>
